{
  "extends": "airbnb/base",
  "ecmaFeatures": {
    "modules": true,
    "jsx": true,
    "class": true,
    "es6": true
  },
  "rules": {
    "properties": 0,
    "comma-dangle": 0,
    "no-undef" : 0,
    "object-shorthand" : 0,
    "no-underscore-dangle" : 0,
    "prefer-arrow-callback" : 0,
    "object-curly-spacing": 2,
    "quote-props": [2, "as-needed"],
    "no-param-reassign": [2, { "props": false }],
    "id-length": [2, {"min": 2, "properties": "never", "exceptions": ["x", "n", "i", "_"]}]
  }
}
